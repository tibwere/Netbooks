<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="main" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0" styleClass="bg" stylesheets="@../css/style.css">
         <children>
            <VBox alignment="CENTER" prefHeight="800.0" prefWidth="500.0" spacing="30.0">
               <children>
                  <ImageView fx:id="imv" fitHeight="450.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin></ImageView>
                  <HBox alignment="CENTER_LEFT" maxHeight="150.0" maxWidth="300.0" prefHeight="150.0" prefWidth="300.0" styleClass="exchangeableBookDetails">
                     <children>
                        <Pane maxHeight="150.0" maxWidth="10.0" prefHeight="150.0" prefWidth="10.0" visible="false" />
                        <VBox alignment="CENTER_LEFT" prefHeight="150.0" prefWidth="300.0" styleClass="transparent">
                           <children>
                              <Label style="-fx-text-fill: black;" text="DETAILS">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="69.0" maxHeight="25.0" maxWidth="300.0" prefHeight="25.0" prefWidth="300.0">
                                 <children>
                                    <Label prefWidth="100.0" style="-fx-text-fill: black;" text="ISBN:">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="isbn" style="-fx-text-fill: black;" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" maxHeight="25.0" maxWidth="300.0" prefHeight="25.0" prefWidth="300.0">
                                 <children>
                                    <Label prefWidth="100.0" style="-fx-text-fill: black;" text="TITLE:">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="title" style="-fx-text-fill: black;" wrapText="true" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" maxHeight="25.0" maxWidth="300.0" prefHeight="25.0" prefWidth="300.0">
                                 <children>
                                    <Label prefWidth="100.0" style="-fx-text-fill: black;" text="AUTHOR:">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="author" style="-fx-text-fill: black;" wrapText="true" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" maxHeight="25.0" maxWidth="300.0" prefHeight="25.0" prefWidth="300.0">
                                 <children>
                                    <Label prefWidth="100.0" style="-fx-text-fill: black;" text="OWNER ID:">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="ownerDetail" style="-fx-text-fill: black;" wrapText="true" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox prefHeight="800.0" prefWidth="0.0" visible="false" HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" prefHeight="800.0" prefWidth="500.0" styleClass="exBookPanebg">
               <children>
                  <Label alignment="CENTER" prefHeight="50.0" prefWidth="420.0" text="MAKE A PROPOSAL" textAlignment="JUSTIFY" textFill="WHITE">
                     <padding>
                        <Insets bottom="40.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER" prefWidth="420.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="50.0" prefWidth="420.0" style="-fx-text-fill: black;" text="Do you want to send an exchange proposal to " textAlignment="RIGHT">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="ownerLabel" alignment="CENTER" style="-fx-text-fill: black;" wrapText="true">
                           <font>
                              <Font name="System Bold Italic" size="18.0" />
                           </font>
                        </Label>
                        <Label alignment="CENTER" prefHeight="50.0" prefWidth="420.0" style="-fx-text-fill: black;" text="for this book?" textAlignment="JUSTIFY">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="50.0" />
                     </padding>
                  </VBox>
                  <Button fx:id="sendBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#clickOnSendProposal" prefWidth="165.0" styleClass="btn" text="SEND PROPOSAL" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Label fx:id="successLabel" alignment="CENTER" prefHeight="80.0" prefWidth="420.0" style="-fx-text-fill: black;" text="The proposal has been sent." textAlignment="JUSTIFY" visible="false" wrapText="true">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children></VBox>
         </children>
      </HBox>
   </center>
</BorderPane>

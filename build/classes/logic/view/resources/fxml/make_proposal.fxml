<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="main" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0" styleClass="bg" stylesheets="@../css/style.css">
         <children>
            <VBox alignment="CENTER" prefHeight="800.0" prefWidth="500.0" spacing="30.0">
               <children>
                  <ImageView fx:id="imv" fitHeight="450.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin></ImageView>
                  <HBox alignment="CENTER_LEFT" maxHeight="150.0" maxWidth="300.0" prefHeight="150.0" prefWidth="300.0" styleClass="exchangeableBookDetails">
                     <children>
                        <Pane maxHeight="150.0" maxWidth="10.0" prefHeight="150.0" prefWidth="10.0" visible="false" />
                        <VBox alignment="CENTER_LEFT" maxHeight="150.0" maxWidth="300.0" prefHeight="150.0" prefWidth="300.0" styleClass="transparent">
                           <children>
                              <Text lineSpacing="1.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Details:" underline="true">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets bottom="5.0" />
                                 </VBox.margin>
                              </Text>
                              <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="69.0" maxHeight="25.0" maxWidth="300.0" prefHeight="25.0" prefWidth="300.0" spacing="34.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ISBN:">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Text>
                                    <Label fx:id="isbn" maxHeight="25.0" maxWidth="226.0" prefHeight="25.0" prefWidth="226.0" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" maxHeight="25.0" maxWidth="300.0" prefHeight="25.0" prefWidth="300.0" spacing="36.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Title:">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Text>
                                    <Label fx:id="title" maxHeight="25.0" maxWidth="226.0" prefHeight="25.0" prefWidth="226.0" wrapText="true" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" maxHeight="25.0" maxWidth="300.0" prefHeight="25.0" prefWidth="300.0" spacing="19.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Author:">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Text>
                                    <Label fx:id="author" maxHeight="25.0" maxWidth="226.0" prefHeight="25.0" prefWidth="226.0" wrapText="true" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" maxHeight="25.0" maxWidth="300.0" prefHeight="25.0" prefWidth="300.0" spacing="8.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="OwnerId:">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Text>
                                    <Label fx:id="ownerDetail" maxHeight="25.0" maxWidth="226.0" prefHeight="25.0" prefWidth="226.0" wrapText="true" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox prefHeight="800.0" prefWidth="0.0" visible="false" HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" prefHeight="800.0" prefWidth="500.0" styleClass="exBookPanebg">
               <children>
                  <Label alignment="CENTER" prefHeight="50.0" prefWidth="420.0" text="MAKE A PROPOSAL" textAlignment="JUSTIFY" textFill="#f0bf8b">
                     <padding>
                        <Insets bottom="40.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER" prefWidth="420.0">
                     <children>
                        <Label prefHeight="50.0" prefWidth="420.0" text="Do you want to send an exchange" textAlignment="JUSTIFY">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="420.0">
                           <children>
                              <Label prefHeight="50.0" prefWidth="150.0" text="proposal to " textAlignment="JUSTIFY">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <Label fx:id="ownerLabel" prefHeight="50.0" prefWidth="270.0" wrapText="true">
                                 <font>
                                    <Font name="System Italic" size="24.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label prefHeight="50.0" prefWidth="420.0" text="for this book?" textAlignment="JUSTIFY">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="50.0" />
                     </padding>
                  </VBox>
                  <Button fx:id="sendBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#clickOnSendProposal" prefWidth="165.0" styleClass="btn" text="SEND PROPOSAL" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Label fx:id="successLabel" alignment="CENTER" prefHeight="80.0" prefWidth="420.0" text="The proposal has been sent." textAlignment="JUSTIFY" visible="false" wrapText="true">
                     <font>
                        <Font name="System Italic" size="18.0" />
                     </font>
                  </Label>
               </children></VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
